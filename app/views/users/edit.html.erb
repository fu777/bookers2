<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 max-auto">
      <h2>User info</h2>
      
      <%= form_with model: @user, local:true do |f| %>
      
      <div id="error_explanation">
        <% if @user.errors.any? %>
          <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      
      <div class="form-group">
        <div class="field_with_errors">
          <label for="user_name">Name</label>
        </div>
        <div class="field_with_errors">
          <%= f.text_field :name, autofocus: true, id: "user_name", placeholder: "名前", class: 'form-control name' %>
        </div>
      </div>
      <div class="form-group">
        <div class="field_with_errors">
          <label for="user_image">Image</label>
        </div>
        <div class="field_with_errors">
          <%= f.file_field :profile_image, autofocus: true, id: "user_plofile-image", placeholder: "プロフィール画像", accept: "image/*", class: 'form-control-file user_image' %>
        </div>
      </div>
      <div class="form-group">
        <div class="field_with_errors">
          <label for="user_introduction">Introduction</label>
        </div>
        <div class="field_with_errors">
          <%= f.text_area :introduction, autofocus: true, id: "user_introduction", placeholder: "自己紹介", class: 'form-control introduction' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class: 'btn btn-secondary' %>
      </div>
      
      <% end %>
        
    </div>
  </div>
</div>
